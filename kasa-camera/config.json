{
    "name": "Kasa Camera",
    "version": "1.5",
    "slug": "kasa_cam",
    "description": "Add-on to integrate with some Kasa cameras that don't explicitly expose their streams.",
    "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
    "startup": "application",
    "boot": "auto",
    "homeassistant_api": true,
    "image": "joshgetter/{arch}-addon-kasa-camera",
    "options": {
        "kasausername" : null,
        "kasapassword" : null,
        "cameraip" : null,
        "cameraname": "kasacam",
        "retrylimit": 5,
        "retrysleep": 30
    },
    "schema": {
        "kasausername": "str",
        "kasapassword": "str",
        "cameraip": "str",
        "cameraname": "str",
        "retrylimit": "int",
        "retrysleep": "float",
        "toggleentity": "str?"
    },
    "ports":{
        "80/tcp": 43330,
        "1935/tcp": 43331
    },
    "ports_description":{
        "80/tcp": "HLS stream output",
        "1935/tcp": "RTMP stream output"
    }
  }